{
  "name": "sada-bridge-electron",
  "version": "1.3.0",
  "description": "Bridge service between POS and printers with WebSocket server for printing base64 documents.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "sadabridge",
    "sada",
    "bridge",
    "printer",
    "base64",
    "electron",
    "websocket"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "pdf-to-printer": "^5.6.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.sadabridge.electron",
    "productName": "SADA Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "test-client.js",
      "package.json",
      "assets/**/*",
      "node_modules/ws/**/*",
      "!node_modules/ws/node_modules/**/*",
      "!**/*.map",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "assets/printer.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/printer.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/printer.png"
    }
  }
}
